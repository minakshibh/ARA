<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
 <LinearLayout
    
        android:id="@+id/LinearLayout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:background="@color/blue_header"
        android:orientation="horizontal" >

       <ImageView
          android:id="@+id/imageView_back"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/textView_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="start|center_vertical"
            android:text="Back"
            android:padding="5dp"
            android:textColor="@color/white" />

        <ImageView
             android:src="@drawable/header_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
             />

        <TextView
            android:id="@+id/textView_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:text="Edit"
              android:visibility="invisible"
            android:textColor="@color/white" />
    </LinearLayout> 

    <TextView
        android:id="@+id/textViewPayPal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="@color/app_yellow"
        android:gravity="start|center_vertical"
        android:paddingLeft="10dp"
        android:text="SCHEDULE SERVICE"
        android:textColor="@color/app_blue" />

    <LinearLayout
        android:id="@+id/LinearLayout_main"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9.5"
       
        android:orientation="vertical" >

        
<LinearLayout
            android:id="@+id/layout_firstname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
        
            android:background="@drawable/blue_rounded_btn"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/user_icon" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/edittext_firstname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@color/white"
                android:hint="First Name"
                android:capitalize="words"
                 android:textColorHint="@color/light_blue"
                android:maxLength="25"
                android:textColor="@color/blue_header"
                android:inputType="textCapSentences|textNoSuggestions"
                android:paddingLeft="10dp"
                android:textSize="@dimen/default_text_size"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_lastname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
        
            android:background="@drawable/blue_rounded_btn"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/user_icon" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/edittext_lastname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@color/white"
                android:hint="Last Name"
                android:paddingLeft="10dp"
                android:capitalize="words"
                 android:textColorHint="@color/light_blue"
                android:maxLength="25"
                 android:textColor="@color/blue_header"
                android:inputType="textCapSentences|textNoSuggestions"
                android:textSize="@dimen/default_text_size"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_phonenumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
        
             android:background="@drawable/blue_rounded_btn"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/phone_icon" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/edittext_phonenumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@color/white"
                android:hint="Phone Number"
                android:maxLength="14"
                 android:textColor="@color/blue_header"
                android:paddingLeft="10dp"
                 android:textColorHint="@color/light_blue"
                android:inputType="phone"
                android:textSize="@dimen/default_text_size"
                android:singleLine="true" />
        </LinearLayout>

         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="30dp"
             android:layout_marginTop="10dp"
             android:orientation="horizontal" >

             <LinearLayout
                 android:id="@+id/layout_email"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="9"
                 android:background="@drawable/blue_rounded_btn"
                 android:orientation="horizontal" >

                 <ImageView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_weight="1"
                     android:padding="5dp"
                     android:src="@drawable/email_icon" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/edittext_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@color/white"
                android:hint="Email Address"
                android:paddingLeft="10dp"
                android:inputType="textEmailAddress"
                 android:textColorHint="@color/light_blue"
               android:textColor="@color/blue_header"
                android:textSize="@dimen/default_text_size"
                android:singleLine="true" >
            <requestFocus />
            </EditText>
            <ProgressBar
                    android:id="@+id/progressBar_email"
                    style="?android:attr/progressBarStyleSmall"
                  	android:layout_width="0dp"
                  	android:layout_weight="1"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />
        </LinearLayout>

         <ImageView
              android:id="@+id/img_email_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="5dp"
                android:visibility="invisible"
                android:src="@drawable/ticksignup"/>
        </LinearLayout>
        
        
        
        <LinearLayout
            android:id="@+id/layoutService"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
             android:background="@drawable/blue_rounded_btn"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/setting_icon" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />
 	<RelativeLayout
             android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spService"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingRight="15dp"
                android:background="@color/white"
                android:textSize="@dimen/default_text_size"
                android:singleLine="true" />

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:padding="5dp"
                 android:src="@drawable/dropdown_arrow" />

             </RelativeLayout>
             
        </LinearLayout>
         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="30dp"
             android:layout_marginRight="30dp"
             android:layout_marginTop="10dp"
             android:orientation="horizontal" >
<LinearLayout
                 android:id="@+id/layout_Predate"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="9"
                 android:background="@drawable/blue_rounded_btn"
                 android:orientation="horizontal" >

                 <ImageView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_weight="1"
                     android:padding="5dp"
                     android:src="@drawable/calander_icon" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/edittextPreDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@color/white"
                android:hint="Prefered Date"
                android:paddingLeft="10dp"
                android:inputType="textEmailAddress"
                 android:textColorHint="@color/light_blue"
               android:textColor="@color/blue_header"
                android:textSize="@dimen/default_text_size"
                android:singleLine="true" >
            <requestFocus />
            </TextView>
            
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutTimeSlot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
             android:background="@drawable/blue_rounded_btn"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/time_icon" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />
 	<RelativeLayout
             android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spTimeSlot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingRight="15dp"
                android:background="@color/white"
                android:textSize="@dimen/default_text_size"
                android:singleLine="true" />

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:padding="5dp"
                 android:src="@drawable/dropdown_arrow" />

             </RelativeLayout>
             
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_comment"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_rounded_btn"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="top"
                android:src="@drawable/comments_icon" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />

             <LinearLayout
            android:id="@+id/layout_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="9">
            <EditText
                android:id="@+id/edittext_comment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="@color/white"
                android:gravity="top"
                android:hint="Comments (Optional)"
                android:lines="3"
                 android:textColorHint="@color/light_blue"
                android:maxLength="250"
                android:textColor="@color/blue_header"
                android:textSize="@dimen/default_text_size"
                android:paddingLeft="10dp"
                android:maxLines="3" />
            
             <TextView
                android:id="@+id/txtCount"
                android:layout_width="wrap_content"
                android:gravity="start"
                android:textColor="@color/blue_header"
                android:layout_weight="3"
                android:textSize="10sp"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:text=""
              
                 />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
          	android:padding="10dp"
          	android:textSize="18sp"
          	android:textStyle="bold"
            android:background="@drawable/yellow_rounded_btn"
            android:text="SUBMIT"
            android:textColor="@color/app_blue"
           />

        
    </LinearLayout>

</LinearLayout>