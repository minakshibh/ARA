<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_blue"
    android:orientation="vertical" >
    
 <LinearLayout
    
        android:id="@+id/LinearLayout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:background="@color/black"
        android:orientation="horizontal" >

       <ImageView
          android:id="@+id/imageView_back"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/textView_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="start|center_vertical"
            android:text="Back"
            android:padding="5dp"
            android:textColor="@color/white" />

        <ImageView
             android:src="@drawable/header_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
             />

        <TextView
            android:id="@+id/textView_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="end"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:text="Edit"
              android:visibility="invisible"
            android:textColor="@color/white" />
    </LinearLayout> 

    <TextView
        android:id="@+id/textView_SubmitReferral"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="@color/app_yellow"
        android:gravity="start|center_vertical"
        android:paddingLeft="10dp"
        android:text="SUBMIT REFERRAL"
        android:textColor="@color/app_blue" />

    <LinearLayout
        android:id="@+id/LinearLayout_main"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="9.5"
        android:background="@color/app_blue"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout_importcontacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
             android:background="@drawable/white_rounded_btn"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageview_importcontacts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@drawable/import_contacts_icon" />

            <TextView
                  android:id="@+id/textView_import"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:text="IMPORT FROM CONTACTS"
                android:textSize="12sp"
                android:textColor="@color/app_blue" />
        </LinearLayout>
<LinearLayout
            android:id="@+id/layout_firstname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
        
            android:background="@drawable/white_rounded_btn"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/user_icon" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/edittext_firstname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@color/white"
                android:hint="First Name"
                android:capitalize="words"
                android:maxLength="25"
                android:inputType="textCapSentences|textNoSuggestions"
                android:paddingLeft="10dp"
                android:textSize="@dimen/default_text_size"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_lastname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
        
            android:background="@drawable/white_rounded_btn"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/user_icon" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/edittext_lastname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@color/white"
                android:hint="Last Name"
                android:paddingLeft="10dp"
                android:capitalize="words"
                android:maxLength="25"
                android:inputType="textCapSentences|textNoSuggestions"
                android:textSize="@dimen/default_text_size"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_phonenumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
        
             android:background="@drawable/white_rounded_btn"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/phone_icon" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/edittext_phonenumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@color/white"
                android:hint="Phone Number (Optional)"
                android:maxLength="14"
                android:paddingLeft="10dp"
                android:inputType="phone"
                android:textSize="@dimen/default_text_size"
                android:singleLine="true" />
        </LinearLayout>

         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="30dp"
             android:layout_marginTop="10dp"
             android:orientation="horizontal" >

             <LinearLayout
                 android:id="@+id/layout_email"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="9"
                 android:background="@drawable/white_rounded_btn"
                 android:orientation="horizontal" >

                 <ImageView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_weight="1"
                     android:padding="5dp"
                     android:src="@drawable/email_icon" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/edittext_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="8"
                android:background="@color/white"
                android:hint="Email Address"
                android:paddingLeft="10dp"
                android:inputType="textEmailAddress"
              
                android:textSize="@dimen/default_text_size"
                android:singleLine="true" >
            <requestFocus />
            </EditText>
            <ProgressBar
                    android:id="@+id/progressBar_email"
                    style="?android:attr/progressBarStyleSmall"
                  	android:layout_width="0dp"
                  	android:layout_weight="1"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />
        </LinearLayout>

         <ImageView
              android:id="@+id/img_email_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="5dp"
                android:visibility="invisible"
                android:src="@drawable/ticksignup"/>
        </LinearLayout>
        
        
        
        <LinearLayout
            android:id="@+id/layout_mea"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
             android:background="@drawable/white_rounded_btn"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/user_icon" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />
 	<RelativeLayout
             android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/mea_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingRight="15dp"
                android:background="@color/white"
                android:textSize="@dimen/default_text_size"
                android:singleLine="true" />

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:padding="5dp"
                 android:src="@drawable/dropdown_arrow" />

             </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_comment"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_rounded_btn"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="top"
                android:src="@drawable/comments_icon" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/edittext_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="@color/white"
                android:gravity="top"
                android:hint="Comments (Optional)"
                android:lines="3"
                android:textSize="@dimen/default_text_size"
                android:paddingLeft="10dp"
                android:singleLine="true" />
        </LinearLayout>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
          	android:padding="10dp"
            android:background="@drawable/yellow_rounded_btn"
            android:text="SUBMIT REFERRAL"
            android:textColor="@color/app_blue"
            android:textStyle="bold"
            android:textSize="@dimen/default_text_size" />

        
    </LinearLayout>

</LinearLayout>